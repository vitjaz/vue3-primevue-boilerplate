{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "target": "esnext",
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "ignoreDeprecations": "5.0",
    "experimentalDecorators": true,
    "baseUrl": ".",
    "allowJs": true,
    "checkJs": false,
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib":  ["ES2016", "DOM", "DOM.Iterable"]
  },
  // "references": [
  //   {
  //     "path": "./tsconfig.config.json"
  //   }
  // ]
}
